<Window x:Class="Deltagerliste_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deltagerliste_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000" >
	<Grid>
		<ListView x:Name="MyList" HorizontalAlignment="Left" Height="479" Margin="20,21,0,0" VerticalAlignment="Top" Width="830">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="ID" Width="80" DisplayMemberBinding="{Binding Path=ID}"/>
					<GridViewColumn Header="Name" Width="160" DisplayMemberBinding="{Binding Path=Name}"/>
					<GridViewColumn Header="Studienummer" Width="100" DisplayMemberBinding="{Binding Path=StudieNummer}"/>
					<GridViewColumn Header="Email" Width="160" DisplayMemberBinding="{Binding Path=Email}"/>
					<GridViewColumn Header="Role" Width="90" DisplayMemberBinding="{Binding Path=Role}"/>
					<GridViewColumn Header="Origin" Width="110" DisplayMemberBinding="{Binding Path=Origin}"/>
					<GridViewColumn Header="Available" Width="100" DisplayMemberBinding="{Binding Path=Available}"/>
				
				</GridView>
			</ListView.View>
		</ListView>

	</Grid>
</Window>
