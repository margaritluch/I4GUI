<Window x:Class="Lab_Settings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_Settings"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<Label Content="Person Name" HorizontalAlignment="Left" Margin="48,28,0,0" VerticalAlignment="Top"/>
		<Label Content="Person Age" HorizontalAlignment="Left" Margin="247,28,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="23" Margin="48,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="ageTextBox" HorizontalAlignment="Left" Height="23" Margin="247,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<Button x:Name="changeAgeButton" Content="change" HorizontalAlignment="Left" Margin="167,129,0,0" VerticalAlignment="Top" Width="75" Click="changeAgeButton_Click"/>
		<Button x:Name="resetButton" Content="Reset" HorizontalAlignment="Left" Margin="399,129,0,0" VerticalAlignment="Top" Width="75" Click="resetButton_Click"/>
		<Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="282,129,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>

	</Grid>
</Window>
